class Solution:
    def reverse(self, x: int) -> int:
        revnum = 0
        sign = (x > 0) - (x < 0)  
        x = abs(x)
        
        while x:
            revnum = revnum * 10 + x % 10
            x //= 10
        
        revnum *= sign
        
        return revnum if -2**31 <= revnum <= 2**31 - 1 else 0
